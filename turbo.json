{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "inputs": ["src/**/*.ts", "package.json", "tsconfig.json"],
      "outputs": ["dist/**"],
      "dependsOn": ["^generate", "generate", "^build"]
    },
    "typecheck": {
      "inputs": [
        "src/**/*.ts",
        "package.json",
        "tsconfig.json",
        "!vitest.config.*"
      ],
      "outputs": [],
      "dependsOn": ["^build", "^typecheck"]
    },
    "format": {},
    "format:check": {},
    "lint": {
      "inputs": ["src/**/*.ts"]
    },
    "lint:check": {
      "inputs": ["src/**/*.ts"]
    },
    "test": {
      "inputs": ["src/**/*.ts"],
      "dependsOn": ["^test", "^build"]
    },
    "test:coverage": {
      "inputs": ["src/**/*.ts"],
      "dependsOn": ["^test", "^build"]
    },
    "generate": {},
    "generate:definitions-internal": {
      "inputs": ["api/internal.yaml", "package.json", "tsconfig.json"],
      "outputs": ["src/generated/definitions/internal/**"],
      "dependsOn": ["lint:api", "clean:generate"]
    },
    "lint:api": {
      "inputs": ["api/*.yaml"],
      "dependsOn": []
    },
    "clean:generate": {}
  }
}
