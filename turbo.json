{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "build": {
      "inputs": [
        "lib/**/*.ts",
        "src/**/*.ts",
        "package.json",
        "tsconfig.json"
      ],
      "outputs": [
        "dist/**"
      ],
      "dependsOn": [
        "generate",
        "^build"
      ]
    },
    "typecheck": {
      "inputs": [
        "lib/**/*.ts",
        "src/**/*.ts",
        "package.json",
        "tsconfig.json",
        "!vitest.config.*"
      ],
      "outputs": [],
      "dependsOn": [
        "^build",
        "^typecheck"
      ]
    },
    "format": {},
    "format:check": {},
    "generate": {
      "inputs": [
        "./openapi.yaml"
      ],
      "outputs": [
        "src/generated/**/*"
      ]
    },
    "lint": {
      "inputs": [
        "lib/**/*.ts",
        "src/**/*.ts"
      ]
    },
    "lint:check": {
      "inputs": [
        "lib/**/*.ts",
        "src/**/*.ts"
      ]
    },
    "test": {
      "dependsOn": [
        "generate"
      ]
    },
    "test:coverage": {
      "dependsOn": [
        "generate"
      ]
    }
  }
}